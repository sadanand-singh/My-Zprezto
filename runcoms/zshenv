# Ensure that a non-login, non-interactive shell has a defined environment.
if [[ ( "$SHLVL" -eq 1 && ! -o LOGIN ) && -s "${ZDOTDIR:-$HOME}/.zprofile" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprofile"
fi

alias vpnconnect="sudo openconnect --user=sadanand https://mirvpn.wustl.edu/nrg"
alias mount_zion="sshfs -o allow_other,IdentityFile=/home/sadanand/.ssh/id_ed25519 sadanand@zion: /home/sadanand/zion_home"
alias eject_zion="sudo umount /home/sadanand/zion_home"
alias vi=nvim
alias vim=nvim

function pyclean() {
    ZSH_PYCLEAN_PLACES=${*:-'.'}
    find ${ZSH_PYCLEAN_PLACES} -type f -name "*.py[co]" -delete
    find ${ZSH_PYCLEAN_PLACES} -type d -name "__pycache__" -delete
}
